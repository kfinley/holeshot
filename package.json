{
  "name": "@holeshot/root",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "i:prod": "NODE_ENV=production pnpm i --production && cd infrastructure && npm i --omit=dev",
    "dev:init": "./.devcontainer/scripts/dev-init.sh",
    "cdk": "cd infrastructure && npm run cdk",
    "client": "pnpm --filter @holeshot/vue2-client",
    "vue2-components": "pnpm --filter @finley/vue2-components",
    "vue2-user": "pnpm --filter @holeshot/vue2-user",
    "holeshot": "pnpm --filter @holeshot/plugin",
    "build": "pnpm run client build && pnpm run build:lambdas",
    "build:lambdas": "pnpm --recursive --stream --filter @holeshot/commands --filter @holeshot/aws-commands --filter @holeshot/types --filter @holeshot/user-service --filter @holeshot/core-service --filter @holeshot/aws-websockets --filter @holeshot/crawler-service run build",
    "build:client": "pnpm run client build && pnpm run post-build:fix-img-paths",
    "build:cdk": "cd infrastructure && npm run build",
    "post-build:fix-img-paths": "./infrastructure/scripts/fix-img-paths.sh",
    "containers:restart": "./.devcontainer/scripts/local-containers.sh restart",
    "containers:start": "./.devcontainer/scripts/local-containers.sh start",
    "containers:stop": "./.devcontainer/scripts/local-containers.sh stop",
    "test": "pnpm --stream --filter @holeshot/plugin --filter @finley/vue2-components run test:unit",
    "storybook:components": "pnpm --stream --filter @kfinley/vue2-components run storybook ",
    "storybook:holeshot": "pnpm --stream --filter @holeshot/plugin run storybook",
    "storybook:user": "pnpm --stream --filter @holeshot/vue2-user run storybook",
    "link:bootstrap": "lerna exec 'cd node_modules && ln -s ../../../node_modules/bootstrap bootstrap' --scope=@holeshot/plugin --scope=@holeshot/vue2-client --scope=@holeshot/vue2-user --scope=@finley/vue2-components --stream",
    "deploy-storybook:local": "rm -rf storybooks && storybook-to-ghpages --out=storybooks --packages packages --dry-run && find packages -type f -name storybooks -exec rm -rf {} \\;",
    "dev:client": "pnpm run client dev",
    "dev:client:docker": "pnpm run client dev:docker",
    "generate-sitemap": "./infrastructure/scripts/generate-sitemap.sh ./packages/vue2-client/public/sitemap.xml",
    "sls": "sls",
    "dev:sls": "pnpm run ses:copy-templates && sls offline start --migrate",
    "sls:build-plugins": "pnpm --stream --filter @holeshot/serverless-offline-stepfunctions-plugin run build",
    "sls:start": "export SLS_DEBUG=* && node --inspect=0.0.0.0:9228 node_modules/serverless/bin/serverless offline start --printOutput -s Dev",
    "sls:start-debug": "export SLS_DEBUG=* && sls offline start --printOutput -s Dev",
    "sls:plugin-template": "cd packages/sls-plugins && sls create --template plugin",
    "sls:webpack": "export SLS_DEBUG=* && serverless webpack",
    "smoke": "pnpm run build && pnpm run cdk synth",
    "ses:copy-templates": "cp services/User/EmailTemplates/ConfirmRegistration.json ./email-templates/",
    "update-init-submodules": "git submodule update --init --recursive"
  },
  "dependencies": {
    "@finley/vue2-components": "workspace:1.0.0",
    "inversify-props": "^2.2.6",
    "reflect-metadata": "^0.1.13",
    "aws-crt": "1.15.5",
    "aws-sdk": "^2.1291.0",
    "@aws-sdk/signature-v4-crt": "3.267.0",
    "tslib": "^2.4.1"
  },
  "devDependencies": {
    "@storybook/storybook-deployer": "^2.8.16",
    "@types/jest": "^27.0.2",
    "aws-ses-v2-local": "2.1.0",
    "dotenv": "^16.0.3",
    "http-server": "^14.1.1",
    "serverless": "^2.72.3",
    "serverless-dynamodb-local": "^0.2.40",
    "serverless-offline": "^8.8.1",
    "serverless-offline-ses-v2": "1.0.1",
    "serverless-offline-sns": "^0.76.0",
    "serverless-s3-local": "^0.7.1",
    "serverless-step-functions": "^3.10.0",
    "serverless-webpack": "^5.10.0",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.1.5",
    "webpack": "^5.20.2",
    "webpack-node-externals": "^3.0.0",
    "yaml": "^2.1.3"
  }
}
